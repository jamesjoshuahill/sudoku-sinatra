<html>
<head>
  <title>Sudoku Game</title>   
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
<body>
<h1>Life is too short for playing Sudoku</h1>
<div id="sudoku">
<form action="/" method="post">
<!-- one div for each row -->
<% 3.times do |row| %>
  <div class='row'>
  <!-- we want to create separate div elements for boxes to style them using CSS -->
  <% 3.times do |box| %>
    <div class="box">
    <!-- each box will have nine cells -->
    <% 3.times do |cell_row| %>
      <div class="cell-row">
      <% 3.times do |cell| %>
        <div class="cell">
          <!-- every cell will have an input field -->
          <% cell_index = row * 27 + box * 9 + cell_row * 3 + cell %>
          <% cell_value = cell_value(@current_solution[cell_index]) %>
          <% # puts "row: #{row} * 27 + box: #{box} * 9 + cell_row: #{cell_row} * 3 + cell: #{cell} = #{cell_index} with value: #{cell_value}" %>
          <% cell_color_class = colour_class(@check_solution, @puzzle[cell_index], @current_solution[cell_index], @solution[cell_index]) %>
          <input class="<%= cell_color_class %>" name="cell[]" type="text" maxlength="1" autocomplete="off" value="<%= cell_value %>">
        </div>
      <% end %>
      </div>
    <% end %>
    </div>
  <% end %>
  </div>
<% end %>
  <button>Check solution</button>
</form>
</div>
</body>
</html>